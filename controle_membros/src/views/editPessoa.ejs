<%- include('includes/head'); %>

    <div class="container col-4 py-5">
        <div class="card">
            <div class="card-header">
                <h4>Cadastrar Pessoa</h4>
            </div>
            <div class="card-body">
                <form action="/cadastro/editar/<%= pessoa._id %>" method="POST">
                    <div class="mb-4">
                        <input value="<%= pessoa.nome %>" type="text" class="form-control" placeholder="Nome" name="nome">
                    </div>
                    <div class="mb-4">
                        <input value="<%= pessoa.email %>" type="email" class="form-control" placeholder="E-mail" name="email">
                    </div>
                    <div class="mb-4">
                        <input value="<%= pessoa.telefone %>" type="tel" class="form-control" placeholder="Telefone" name="telefone">
                    </div>
                    <div class="mb-4">
                        <label for="exampleInputEmail1" class="form-label">Data de Nascimento</label>
                        <input value="<%= pessoa.nascimento %>" type="date" class="form-control" name="nascimento">
                    </div>

                    <button type="submit" class="btn btn-primary">Salvar</button>
                    <a class="btn btn-secondary" href="/" role="button">Voltar</a>

                </form>
            </div>
        </div>
    </div>


    <%- include('includes/footer'); %>